[general]
pythonfile = ~/.offlineimap.py
accounts = Mozilla
ui = TTYUI

[mbnames]
enabled = yes
filename = ~/.mutt/muttmailboxes
peritem = "+%(foldername)s"
sep = " "
header = "mailboxes "
footer = "\n"


[Account Mozilla]
localrepository = Mozilla_Local
remoterepository = Mozilla_Remote
status_backend = sqlite
# Minutes between syncs
autorefresh = 5
# Number of quick-syncs between autorefreshes. Quick-syncs do not update if the
# only changes were to IMAP flags
quick = 10

[Repository Mozilla_Local]
type = Maildir
localfolders = ~/.offlineimap-mozilla
sep = .
restoreatime = no

[Repository Mozilla_Remote]
maxconnections = 4
type = IMAP
foldersort = mycmp
idlefolders = ['INBOX']
remotehost = mail.mozilla.com
remoteuser = raliiev@mozilla.com
ssl = yes
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
folderfilter = lambda folder: folder not in ['Contacts', 'Emailed Contacts', 'Chats']
